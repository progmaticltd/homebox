  /{var/spool/postfix/,}private/relay                             w,
  /{var/spool/postfix/,}private/rewrite                           w,
  /{var/spool/postfix/,}private/smtp                              w,
  /{var/spool/postfix/,}private/trace                             w,
  /{var/spool/postfix/,}private/uucp                              w,
