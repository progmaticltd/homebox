  #include <abstractions/postfix-common>

  /usr/lib/postfix/qmgr                       rmix,
  /{var/spool/postfix/,}active/                                   r,
  /{var/spool/postfix/,}active/[0-9A-F]/[0-9A-F]/*                rwl,
