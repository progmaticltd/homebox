
server {

    listen 80;
    server_name zabbix.{{ network.domain }};

    # Certificate renewal
    location /.well-known {
        alias /var/www/zabbix/.well-known;
    }

    location / {
        # Use Letsencrypt and force https
        rewrite ^ https://$server_name$request_uri? permanent;

        # log files per virtual host
        access_log /var/log/nginx/zabbix-access.log;
        error_log /var/log/nginx/zabbix-error.log;
    }
}

server {

    listen 443;
    server_name zabbix.{{ network.domain }};
    access_log  /var/log/nginx/zabbix-access.log;
    error_log   /var/log/nginx/zabbix-error.log;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/zabbix.homebox.space/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/zabbix.homebox.space/privkey.pem;

    root /usr/share/zabbix/;
    index index.php;

    # redirect errors to the home page
    error_page 403 404 502 503 504 /index.php;

    client_max_body_size 5m;
    client_body_buffer_size 128k;

    location ~ \.php$ {
        fastcgi_index index.php;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
        include fastcgi_params;
        expires epoch;
	fastcgi_intercept_errors on;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param SCRIPT_NAME $fastcgi_script_name;
	fastcgi_param PHP_VALUE "max_execution_time=300\nmax_input_time=300\npost_max_size=16M";
    }

    location ~*  \.(jpg|jpeg|png|gif|css|js|ico)$ {
        expires max;
        log_not_found off;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~ /\. {
        deny all;
    }
}